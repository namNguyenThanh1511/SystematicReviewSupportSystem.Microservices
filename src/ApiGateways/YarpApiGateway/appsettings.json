{
  "JwtSettings": {
    "validIssuer": "SRSSAPI",
    "validAudience": "SRSSClient",
    "secretKey": "DhftOS5uphK3vmCJQrexST1RsyjZBjXWRgJMFPU4"
  },

  "ReverseProxy": {
    "Transforms": [
      {
        "RequestHeader": "Authorization",
        "Append": "{Authorization}"
      }
    ],
    "Routes": {
      "iam-route": {
        "ClusterId": "iam-cluster",
        "Match": { "Path": "/iam/{**catch-all}" },
        "AuthorizationPolicy": "Anonymous", //[AllowAnonymous] , "default" //[Authorize]
        "Transforms": [ { "PathRemovePrefix": "/iam" } ]
      },
      "api1-route": {
        "ClusterId": "api1-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "api/{**catch-all}"
        }
      },
      "swagger-iam": {
        "ClusterId": "iam-cluster",
        "Match": { "Path": "/swagger/iam/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/swagger/iam" } ]
      },
      "swagger-course": {
        "ClusterId": "course-cluster",
        "Match": { "Path": "/swagger/course/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/swagger/course" } ]
      },
      "swagger-submission": {
        "ClusterId": "submission-cluster",
        "Match": { "Path": "/swagger/submission/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/swagger/submission" } ]
      }
    },
    "Clusters": {
      "iam-cluster": {
        "Destinations": {
          "dest": { "Address": "http://localhost:8081/" }
        }
      },
      "api1-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:8080"
          }
        }
      }
    }
  }
}
